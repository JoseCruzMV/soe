{% block administrador_css %}
<style type="text/css">

.menu_Opciones{
	display: table;
	width: 60%;
	height: 60%;
	margin: 2% auto;
}
.fila{
	width: 99%;
	height: 50%;
	text-align: center;
	vertical-align: center;
}
.columna{
	display: inline-block;
	width: 49%;
}
.menu_Item{
	display: inline-block;
	width: 50%;
	margin: 10% auto;
	border: 2px solid var(--primary_Light_Color);
	border-radius: 10px;
	padding: 1.2cm .8cm;
	font-size: 1.4em;
}

.input_Text_Admin{
	margin-top: 15px; 
	width: 50%;
}
.boton_Admin{
	margin: 5% auto;
}
.menu_Materias{
	margin-top: 10%;
}


/*impresion de materias*/
.lista_Materias{
	width: 75%;
	margin: 0 auto;
	margin-top: .8cm;
	padding: 0;
}
.lista_Materias p{
	display: inline;
}
.lista_Materias li{
	list-style: none;
	border: 2px #aaa6a6 solid;
	margin: 10px 0;
	border-radius: 5px;
	padding: 0.4cm .3cm;
	font-size: 1.2em;
}
.lista_Materias a:link{
	color: #333;
}
.lista_Materias li:hover .icon_Opcion{
	display: inline;
}
.icon_Opcion{
	display: none; 
	float: right;
	font-size: .8em;
	margin-right:  .5em;
}
.eliminar{
	color: red;
}
.eliminar:hover{
	color: #333;
	cursor: pointer;
}
.editar:hover{
	color: #aaa6a6;
	cursor: pointer;
}




/*MODAL*/
.modal_This{
	display: block;
	position: fixed;
	z-index: 10;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	overflow: auto;
	background-color: rgb(0,0,0); 
    background-color: rgba(0,0,0,0.4);
}
.modal_Content{
	background-color: #fefefe;
	margin: 15% auto;
	padding: .5cm;
	border: 1px solid #333;
	width: 50%;
	text-align: center;
}
.close{
	color: #aaa;
	float: right;
	font-size: 28px;
	font-weight: bold;
}
.close:hover, .close:focus{
	color: black;
	text-decoration: none;
	cursor: pointer;
}
.boton_Modal{
	display: inline;
}
.modal_Content form{
	clear: both;
	margin-top: .5cm;
}
.modal_Content span{
	display: block;
}
.modal_Content input{
	width: 100%;
	margin: .5cm auto; 
}


/* ESTILOS SECUENCIA */
.input_Materia{
	display: inline-block;
	margin-top: .3cm;
}
.span_Agregar{
	margin: 0 .5cm;
}
.span_Agregar a, .span_Agregar a:hover{
	text-decoration: none;
	color: #aaa6a6;
	cursor: pointer;
}
.modal_Secuencia{
	display: none;
}
.cancelar_Secuencia{
	margin: 0 .3cm;
	padding: 10px 20px;
}
.p_Secuencia{
	margin-right: 1cm;
}
.lista_Materias_Secuencia{
	margin: 0;
}
.lista_Materias_Secuencia li{
	width: 50%;
	list-style: none;
	border-bottom:  1px #333 solid;
	margin: .2cm 0;
	padding: 0.4cm .3cm;
	font-size: 1em
}
.boton_Footer{
	width: 90%;
	margin: .5cm 0;
	text-align: right;
}

/*LISTA DE SECUENCIAS*/
.modal_Mat_Sec{
	display: none;
}
.lista_Materias_Secuencia{
	list-style: none;
	margin: 0;
	padding: 0;
}
.lista_Materias_Secuencia li{
	width: 100%;
	text-align: left;
}
.a_Boton_Secuencia:link, .a_Boton_Secuencia:hover{
	color: #333;
	text-decoration: none;
}
.a_Boton_Secuencia{
	padding: 12px 20px;
}
.modal_Secuencia_E{
	width: 60%;
	margin: 5% auto;
}
.modal_Secuencia_E form{
	padding: 0;
}
.a_Edit_Secuencia{
	color: white;
	margin: 0 auto;
}
.a_Edit_Secuencia:hover, .a_Edit_Secuencia:link, .a_Edit_Secuencia:visited, .a_Edit_Secuencia:active{
	color: white;
	text-decoration: none;
}

.form_Editable{
	display: inline;
	padding: 0;
	margin: 0;	
}
.form_Editable button{
	float: right;
	font-size: .9em;
}
.form_Editable span{
	display: inline;
}

</style>

{% endblock %}