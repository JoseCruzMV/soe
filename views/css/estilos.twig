{% block estilo %}

<style type="text/css">

body, html {
width: 100%;
height: 90%;
margin: 0px;
padding: 0px;
font-family: arial;
--primary_Color: #5c6bc0;
--primary_Light_Color: #8e99f3;
--primary_Dark_Color: #26418f;
--font-title-size: 1.8em;
--font-text-size: 1em;
color: #333;
	
}
a{
	text-decoration: none;
	color: #333;
}
a:hover, a:active, a:visited, a:link{
	color: #333;
	text-decoration: none;
}

/*ESTILOS HEADER*/
.header {
	display: block;
	position: fixed;
	top: 0;
	left: 0; 
	z-index: 5;
	width: 100%;
	height: 10%;
	background-color: var(--primary_Color); 
	text-align: center;
}
.header_Usuario{
	text-align: right;
}
.header_p{
	display: inline-block;
	color: white;
	margin-top: 1%;
	font-size: var(--font-title-size);
}
.etiqueta_Cerrar_Sesion{
	font-size: 1em;
	padding: .2em 1em .2em .7em;
	font-weight: normal;
	border-left: 1px solid white;
}
.etiqueta_Cerrar_Sesion:visited, .etiqueta_Cerrar_Sesion{
	color: white;
}

.etiqueta_Atras{
	float: left;
	border: 0;
	margin-top: 1%;
	font-size: 2em;
}

/*ESTILOS CONTENT*/
.content{
	display: block;
	position: absolute;
	top: 10%;
	width: 90%;
	height: 70%;
	padding-left: 1cm;
}
.content_Title{
	display: block;
	margin: 0 0 0 10%;
	font-size: var(--font-title-size);
}
.content_Title_Menus{
	display: block;
	margin-top: .5cm;
	text-align: center;
	font-size: var(--font-title-size);
	font-weight: bold;
}

/*COMPONENTES*/
.input_Text{
	display: block;
	height: 2.8em;
	border-radius: 5px;
	border: 1px solid #b9b9b9; 
	font-size: 1em;
	padding: 10px;
}

.boton {
	display: block;
	background-color: var(--primary_Dark_Color);
	color: white;
	border: 1px solid #565353;
	font-size: 1em;
	padding: 10px;
	border-radius: 5px;
	width: 120px; 
	cursor: pointer;
	margin-left: .3cm;
}
.boton_Cancelar{
	display: block;
	background-color: #c8baba;
	color: white;
	border: 1px solid #938e8e;
	font-size: 1em;
	padding: 10px;
	border-radius: 5px;
	width: 120px;	
	cursor: pointer;
	margin-right: .2cm;
}
.instrucciones{
	font-size: var(--font-text-size);
	color: #333;
}
.select{
	margin: .5cm 0;
	height: 2.8em;
	border-radius: 5px;
	border: 1px solid #b9b9b9; 
	font-size: 1em;
	background-color: #fefefe;
}
</style>


{% endblock %}

	
