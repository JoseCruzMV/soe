{% include 'css/estilos.twig' %}
{% include 'css/profesor_CSS.twig' %}
{% include 'css/main_CSS.twig' %}
{% include 'css/main_JS.twig' %}
{% include 'css/daygrid_CSS.twig' %}
{% include 'css/daygrid_JS.twig' %}
{% include 'css/es_JS.twig' %}

<!DOCTYPE html>
<html>
	<head>	
		<title>Soe</title>
        <script src='https://kit.fontawesome.com/a076d05399.js'></script>
		{% block estilo %}{% endblock %}
        {% block profesor_CSS %}{% endblock %}
        {% block main_CSS %}{% endblock %}
        {% block daygrid_CSS %}{% endblock %}
        {% block main_JS %}{% endblock %}
        {% block daygrid_JS %}{% endblock %}
        {% block es_JS %}{% endblock %}
	</head>
     <script>

      document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');

        var calendar = new FullCalendar.Calendar(calendarEl, {
          plugins: [ 'dayGrid' ],
          locale: 'es',
          header: {
            center: '',
            right: 'dayGridWeek, dayGridMonth, today, prev, next'
          },
          height: "parent",
          events: {
            url: ''
          }
        });

        calendar.render();
        
      });
     
    </script>
    
	<body>
    <div class="header header_Usuario" >
            <a href="/soe/alumno/{{idClase}}" class="etiqueta_Cerrar_Sesion etiqueta_Atras">
        <i class='fas fa-arrow-left'></i>
      </a>
      <p class="header_p"  id="nombreUsuario">{{username}}</p>
      <span>
        <a href="/soe/logout" class="etiqueta_Cerrar_Sesion">Cerrar Sesion</a>
      </span>
    </div>
    <div class="content" style="height: 80%;">
      <br>
      <div class="menu_Actividad menu_Actividad_Detail" style="text-align: center;">
        <span class="tag_Menu_Actividad tag_Tarea_Detail editar_Tag" onclick="showModal()">
          Actividad
        </span>
      </div>
      <div id='calendar' class="" style="margin-top: .5cm;"></div>
    </div>

    <div id="modalSecuenciaCancel" class="modal_This modal_Secuencia" style="display: none;">
      <div class="modal_Content">
          <span class="close" >
              <a onclick="hideModal()">&times;</a>
          </span>
          <h4>Nueva actividad</h4>
          <br><br>
          <form method="post" action="/soe/alumno/tarea" enctype="multipart/form-data">
              <input name="idClase" value="" style="display: none;">
              <input name="idTarea" value="" style="display: none;">
              <br>
              <button class="boton boton_Modal">Enviar</button>
          </form>
      </div>
    </div>    
  </body>
  <script>
    function showModal()
    {
        document.getElementById('modalSecuenciaCancel').style.display = 'block';
    }
    function hideModal()
    {
        document.getElementById('modalSecuenciaCancel').style.display = 'none';
    }
  </script>
</html>